
<div class="faqz" id="go-to-bottom">
<div class="container-fluid"> 
  {% if section.settings.heading != blank%}
  <h2>{{ section.settings.heading }}</h2>
  {%endif%}
<div class="row">
  <div class="col-sm-2"></div>
<div class="col-sm-8">

<div class="accordion_container">
  {% for block in section.blocks %}
      {% if block.settings.question != blank %}
        <div class="accordion_head">{{ block.settings.question }}<span class="plusminus">+</span>
      {%endif%}
    </div>
    {% if block.settings.answer != blank %}
      <div class="accordion_body" style="display: none;">
        {{ block.settings.answer }}
      </div>
    {%endif%}
  {%endfor%}

</div>
</div>
  <div class="col-sm-2"></div>
</div>
  </div>
</div>
{% schema %}
   {
    "name": "FAQ Section",
    "settings": [
		{
        "id":"heading",
        "type":"text",
        "label":"the heading",
        "default":"FAQS"
		}
	],
	 "blocks": [
	  {
		"type":"text",
		"name":"Question/answers",
		 "settings":[
			{
              "id":"question",
              "type":"text",
              "label":"the questions"	
			},
			
			{
              "id":"answer",
              "type":"richtext",
              "label":"the answers"	
			}
		]
	  }
	]
  }
{% endschema %}

